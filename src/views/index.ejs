<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container-equipments">
    <div class="row">
        <h1 class="text-center">Equipamentos</h1>
        <p class="text-center lead">Seus Equipamentos estão abaixo</p>

        <%- include('includes/messages'); %>

        <% if (equipments.length > 0) { %>
            <div class="">
                <div class="row d-flex justify-content-center">
                    <div class="col-md-10">
                        <div class="card p-3 py-4">
                            <h5>Pesquisar por Equipamentos</h5>
                            <form action="/index" method="GET">
                                <div class="row g-3 mt-2">
                                    <div class="col-md-6"> <input type="text" class="form-control" placeholder="Pesquise por tombo, equipamento, empresa, local e responsável"> </div>
                                    <div class="col-md-3"> <button class="btn btn-secondary btn-block" type="submit">Buscar Resultados</button> </div>
                                </div>
                                <div class="mt-3"> <a data-bs-toggle="collapse" href="#collapseExample" role="button" aria-expanded="false" aria-controls="collapseExample" class="advanced"> Pesquisa avançada com filtros <i class="fa fa-angle-down"></i> </a>
                                    <div class="collapse" id="collapseExample">
                                        <div class="card card-body">
                                            <div class="row">
                                                <div class="col-md-4"> <input type="number" class="form-control" name="tombo" placeholder="Pesquisa por Tombo"> </div>
                                                <div class="col-md-4"> <input type="text" class="form-control" placeholder="Pesquisa por Equipamento"> </div>
                                                <div class="col-md-4"> <input type="text" class="form-control" placeholder="Pesquisa por Empresa"> </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

            <div class="responsive-table">
                <table class="table my-3">
                    <tr>
                        <th>Tombo</th>
                        <th>Equipamento</th>
                        <th>Empresa</th>
                        <th>Local</th>
                        <th>Responsavel</th>
                        <th></th>
                        <th></th>
                    </tr>
                    <% equipments.forEach(equipment => { %>
                    <tr>
                        <td><%= equipment.tombo %></td>
                        <td><%= equipment.equipamento %></td>
                        <td><%= equipment.empresa %></td>
                        <td><%= equipment.local %></td>
                        <td><%= equipment.responsavel %></td>
                        <td>
                            <a href="/equipment/index/<%= equipment.id %>">Editar</a>
                        </td>
                        <td>
                            <a
                                class="text-danger"
                                href="/equipment/delete/<%= equipment._id %>"
                                >Excluir</a
                            >
                        </td>
                    </tr>
                    <% }); %>
                </table>
            </div>
        <% } else { %>
            <p class="text-center lead">Não existem equipamentos cadastrados.</p>
        <% } %>
    </div>
</div>

<%- include('includes/footer'); %>
