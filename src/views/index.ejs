              <span class="fs-6 more-details">Mais Detalhes <i class='bx bxs-chevron-right'></i></span>
            </a>
            <!-- End Card -->
    </div>
    <!--End Card-->
        
</div>
<!-- // page cards -->

<!-- equipment list -->
<% if (equipments.length > 0) { %>

    <!-- modal delete equipment -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Excluir Equipamento</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
            Deseja excluir o equipamento?
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-dark" data-bs-dismiss="modal">Cancelar</button>
            <button type="button" class="btn btn-danger deleteConfirm">Confirmar</button>
            </div>
        </div>
        </div>
    </div>
    <!-- // modal delete equipment -->

    <!-- modal QRCode equipment -->
    <div class="modal fade" id="QRCodeModal" tabindex="-1" aria-labelledby="QRCodeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
            <h5 class="modal-title" id="QRCodeModalLabel">QRCode</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img class="qrcodeImage" src="/assets/img/equipment.png" alt="">
            </div>
            <div class="modal-footer justify-content-center">
            <a class="qrCodeImageLinkDownload" href="/assets/img/equipment.png" download>
                <button type="button" class="btn btn-dark printerButton">
                    <i class='bx bxs-download'></i> Download 
                </button>
            </a>
            <button type="button" class="btn btn-success" data-bs-dismiss="modal">
                Voltar
            </button>
            </div>
        </div>
        </div>
    </div>
    <!-- // modal QRCode equipment -->

    <!-- table equipments -->
    <div class="equipments text-center">
        <div class="recents">
            <div class="row cardHeader">
                <h6 class="col-md-2">Adicionados Recentemente</h6>
                <p class="col-md-1"><a href="/equipment/show">Ver Todos</a></p>
            </div>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th scope="col">Tombo</th>
                        <th scope="col">Equipamento</th>
                        <th scope="col">Empresa</th>
                        <th scope="col">Local (Setor)</th>
                        <th scope="col">Responsável</th>
                        <th scope="col">Configuração</th>
                        <th scope="col">Data de Verificação</th>
                        <th scope="col">QRCode</th>
                    </tr>
                </thead>
                <tbody>
                    <% equipments.forEach(equipment => { %>
                        <tr>
                            <td><%= equipment.tombo %></td>
                            <td><%= equipment.equipamento %></td>
                            <td><%= equipment.empresa %></td>
                            <td><%= equipment.local %></td>
                            <td><%= equipment.responsavel %></td>
                            <td><%= equipment.configuracao %></td>
                            <td><%= equipment.data_verificacao %></td>
                            <td>
                                <a  href="#" class="qrcodeLink" data-bs-toggle="modal" data-bs-target="#QRCodeModal" id="<%= equipment.id %>">Visualizar <i class='bx bxs-show'></i></a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>
    </div>
    <!-- // table equipments -->

<% } else { %>
    <p class="text-center lead no-equipments">
        Não existem equipamentos cadastrados.
        </br></br>
        <a href="/equipment/index" class="btn btn-success">
            <i class='bx bx-plus'></i>  Adicionar Equipamento</a>
    </p>
<% } %>
<!-- // equipment list -->

